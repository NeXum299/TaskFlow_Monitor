{
  "dashboard": {
    "id": null,
    "title": "TaskFlow Monitor Dashboard",
    "tags": ["taskflow", "api", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 {{method}} {{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Tasks Created",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(tasks_created_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Tasks Status Distribution",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "tasks_by_status",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Tasks by Priority",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "tasks_by_priority",
            "refId": "A"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
